<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fondo_color_yellow"
        android:layout_width="210dp"
        android:layout_height="199dp"
        android:background="@drawable/bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProductoListVista"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circular_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.491" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:fontFamily="@font/dragon_ball"
        android:gravity="center"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/fondo_color_yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/lblMarca"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:fontFamily="@font/dragon_ball"
        android:gravity="center"
        android:text="Marca"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/fondo_color_yellow"
        app:layout_constraintTop_toBottomOf="@+id/lblNombre"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/lblCosto"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:fontFamily="@font/dragon_ball"
        android:gravity="center"
        android:text="Costo"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/fondo_color_yellow"
        app:layout_constraintTop_toBottomOf="@+id/lblMarca"
        app:layout_constraintVertical_bias="0.041" />


    <TextView
        android:id="@+id/lblStock"
        android:layout_width="101dp"
        android:layout_height="36dp"
        android:fontFamily="@font/dragon_ball"
        android:gravity="center"
        android:text="Stock"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fondo_color_yellow"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/lblGanancia"
        android:layout_width="171dp"
        android:layout_height="29dp"
        android:fontFamily="@font/dragon_ball"
        android:gravity="center"
        android:text="Ganancia"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toEndOf="@+id/lblStock"
        app:layout_constraintTop_toBottomOf="@+id/fondo_color_yellow"
        app:layout_constraintVertical_bias="0.004" />

    <ImageView
        android:id="@+id/lineavertical"
        android:layout_width="130dp"
        android:layout_height="2dp"
        android:background="@color/sky_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toEndOf="@+id/fondo_color_yellow"
        app:layout_constraintTop_toBottomOf="@+id/lblMarca"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lblPrecio"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:fontFamily="@font/dragon_ball"
        android:gravity="center"
        android:text="Precio"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lblStock"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblStock"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>